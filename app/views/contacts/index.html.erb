<h1>All your contacts</h1>

<% if @contacts.empty? %>
  <p>You don't have any contact yet</p>
<% else %>
  <ul>
    <% @contacts.each do |contact| %>
      <li>
          <h2><%= contact.name %></h2>
          <p><%= contact.email %></p>
          <p><%= contact.message %></p>
          <%= link_to "Delete",
            contact_path(contact),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %> 
          <p></p>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Create new contact", new_contact_path %>